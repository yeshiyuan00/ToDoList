<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.hpu.pnszx.view.CircularImageView
        android:id="@+id/img_friend_avatar"
        style="@style/Smile.ImageView.Photo_Middle"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:contentDescription="@string/action_settings"
        android:padding="5dp"
        android:src="@drawable/default_photo"
        app:border="false"
        app:selector="true"
        app:selector_color="#44FFBB33"
        app:selector_stroke_color="#66FF8800"
        app:selector_stroke_width="2dp" />

    <TextView
        android:id="@+id/tv_friend_name"
        style="@style/Smile.TextView._Black"
        android:layout_alignTop="@id/img_friend_avatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:layout_toRightOf="@id/img_friend_avatar"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="20sp" />

</RelativeLayout>